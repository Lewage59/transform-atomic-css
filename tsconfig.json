{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "noEmit": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ]
}