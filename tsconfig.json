{
  "compilerOptions": {
    "lib": ["ES2016"],
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "target": "ES5",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules/**"
  ],
  "include": [
    "src/**/*"
  ]
}